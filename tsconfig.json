{ 
   "compilerOptions":{ 
      "baseUrl":".",
      "outDir":"./dist/",
      "sourceMap":true,
      "noImplicitAny":false,
      "module":"es6",
      "target":"es6",
      "jsx":"preserve",
      "lib":[ 
         "es5",
         "es6",
         "dom"
      ],
      "experimentalDecorators": true,
      "esModuleInterop":true,
      "allowJs":true,
      "moduleResolution":"node",
      "allowSyntheticDefaultImports":true,
      "declaration": true,
      "skipLibCheck": true
   },
   "include":[ 
      "./src/**/*"
   ],
   "awesomeTypescriptLoaderOptions":{ 
      "reportFiles":[ 
         "./src/**/*"
      ]
   }
}